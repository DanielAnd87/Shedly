<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:background="@color/material_blue_grey_800"
              android:layout_height="wrap_content"
              android:elevation="5dp"
              android:focusableInTouchMode="false"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_maps_directions_car_big"
        android:visibility="gone"
        android:id="@+id/travel_image_from"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Hamstehjul"
            android:gravity="center_vertical"
            android:layout_weight="4"
            android:id="@+id/event_text"
            android:textSize="22sp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"

            android:textColor="@android:color/white"/>



        <TextView
            android:id="@+id/fillup_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#0288D1"
            android:textColor="@color/white"
            android:text="0"
            android:gravity="center"
            android:elevation="7dp"
            android:visibility="visible"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_maps_directions_car_big"
        android:id="@+id/travel_image_to"
        android:visibility="gone"
        android:layout_gravity="right"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:src="@drawable/sun_pointy_drawable"
        android:id="@+id/sun_draw"/>


</LinearLayout>