<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="15dp">


    android:paddingTop="10dp"

    <android.support.v7.widget.RecyclerView
        android:id="@+id/query_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:background="@color/white"

        android:paddingBottom="1dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/welcome_text"
        android:layout_above="@+id/query_text"/>
    <ImageButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/query_done_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:elevation="17dp"
        android:padding="24dp"
        android:foregroundTint="#ffffff"
        android:tint="@android:color/white"
        android:src="@drawable/done_button"
        android:background="@drawable/bg_circle"/>

    <TextView
        android:text="@string/query_top_label"
        style="@style/blue_headlines"
        android:id="@+id/welcome_text"
        android:background="#03A9F4"
        android:textColor="@color/white"
        android:paddingLeft="20dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/query_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:background="#03A9F4"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="@string/query_bottom_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>