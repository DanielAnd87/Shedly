<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:elevation="14dp"
              android:layout_height="match_parent"

              android:background="#64121111">
    <LinearLayout

        android:id="@+id/eventquene_linearlayout"
        android:layout_margin="20dp"
        android:background="#217867"
        android:elevation="14dp"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <ImageButton
            android:id="@+id/restore_button"
            android:layout_width="36dp"
            android:elevation="3dp"
            android:layout_height="35dp"
            android:layout_margin="2dp"
            android:background="@drawable/bg_circle"
            android:src="@drawable/ic_recharge"
            android:text="@string/restore_button_label"
            android:layout_gravity="right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="@string/quene_type_label"
            android:textColor="#D2D2D2"
            android:id="@+id/type_label"
            android:layout_gravity="center_horizontal"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/evenRecyclerView"
            android:layout_margin="15dp"
            />
    </LinearLayout>



</LinearLayout>